{
  "extends": "expo/tsconfig.base",
  "typeRoots": ["node_modules/@types"],
  "compilerOptions": {
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "jsx": "react-native",
    "target": "ESNext",
    "lib": ["DOM", "ESNext"],
    "moduleResolution": "node",
    "noEmit": true,
    "paths": {
      // "@/folder/*": ["src/folder/*"],
    },
    "resolveJsonModule": true,
  },
}